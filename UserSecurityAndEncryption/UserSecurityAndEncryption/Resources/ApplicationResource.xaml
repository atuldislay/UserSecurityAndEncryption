<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Button" x:Key="GreenButtonSkinTemplate" >
           <Style.Setters>
            <Setter Property="Foreground" Value="Green"></Setter>   
           </Style.Setters> 
        </Style>
    <Style TargetType="Button" x:Key="RedButtonSkinTemplate" >
        <Style.Setters>
            <Setter Property="Foreground" Value="Red"></Setter>
        </Style.Setters>
    </Style>
    <Style TargetType="Button" x:Key="BlueButtonSkinTemplate" >
        <Style.Setters>
            <Setter Property="Foreground" Value="CornflowerBlue"></Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>